@model POS.ViewModel.CategoryModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div>
    <h2>Add New Category</h2>
    <div asp-validation-summary="All"></div>
    <form asp-controller="Category" asp-action="Save" method="post" >
        <div class="form-group">
            <label asp-for="CategoryName" ></label>
            <input asp-for="CategoryName" class="form-control"  required/>
            <span asp-validation-for="CategoryName" class="text-danger"/>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" required/>
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        <div class="form-footer">
            <button type="submit" class="btn btn-primary m-md-4">Save Category</button>
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
